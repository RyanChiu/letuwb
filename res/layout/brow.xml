<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" android:background="@drawable/bg" android:id="@+id/flBackground">
    <com.sonyericsson.zoom.ImageZoomView
		android:layout_height="fill_parent" 
		android:id="@+id/imageSwitcher" 
		android:layout_width="fill_parent"
		android:longClickable="true"/>    
	<RelativeLayout android:layout_height="fill_parent" android:layout_width="fill_parent" android:longClickable="true" android:id="@+id/rlControl">
        <LinearLayout android:layout_width="fill_parent" android:gravity="center" android:layout_height="wrap_content" android:id="@+id/linearLayoutAd" android:orientation="vertical">
            <com.google.ads.AdView android:id="@+id/adsBrow"
	            android:layout_width="wrap_content"
	            android:layout_height="50dp"
	            android:layout_gravity="center"
	            ads:adUnitId="a14dae4f9fc303c"
	            ads:adSize="BANNER"/>
        </LinearLayout>
        <LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:gravity="center" android:id="@+id/linearLayoutTop" android:orientation="vertical" android:background="#56000000">
            <LinearLayout android:layout_height="wrap_content" android:gravity="center" android:layout_width="fill_parent" android:id="@+id/linearLayoutOperate">
                <Button android:layout_marginLeft="6dp" android:layout_marginTop="1dp" android:id="@+id/btnSave" android:layout_marginBottom="1dp" android:layout_marginRight="6dp" android:text="@string/label_save" android:textSize="11sp" android:layout_height="wrap_content" android:background="@drawable/btn_custom" android:textColor="#00ff00" android:layout_width="wrap_content"></Button>
                <Button android:layout_marginLeft="6dp" android:layout_marginTop="1dp" android:id="@+id/btnUpload" android:layout_marginBottom="1dp" android:layout_marginRight="6dp" android:text="@string/label_upload" android:textSize="11sp" android:layout_height="wrap_content" android:background="@drawable/btn_custom" android:textColor="#00ff00" android:layout_width="wrap_content"></Button>
                <Button android:layout_marginLeft="6dp" android:layout_marginTop="1dp" android:id="@+id/btnPlay" android:layout_marginBottom="1dp" android:layout_marginRight="6dp" android:text="@string/label_play" android:textSize="11sp" android:layout_height="wrap_content" android:background="@drawable/btn_custom" android:textColor="#00ff00" android:layout_width="wrap_content"></Button>
                <Button android:layout_marginLeft="6dp" android:layout_marginTop="1dp" android:id="@+id/btnPause" android:visibility="gone" android:layout_marginBottom="1dp" android:layout_marginRight="6dp" android:text="@string/label_pause" android:textSize="11sp" android:layout_height="wrap_content" android:background="@drawable/btn_custom" android:textColor="#00ff00" android:layout_width="wrap_content"></Button>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:layout_height="wrap_content" android:id="@+id/linearLayoutInfo" android:layout_width="fill_parent">
                <TextView android:layout_gravity="center" android:layout_height="wrap_content" android:layout_width="fill_parent" android:gravity="center" android:text="Information contents." android:id="@+id/textViewFileInfo"></TextView>
                <TextView android:layout_gravity="center" android:paddingBottom="3dp" android:layout_height="wrap_content" android:layout_width="fill_parent" android:paddingTop="3dp" android:gravity="center" android:text="n/Totals" android:id="@+id/textViewNums" android:background="#00000000"></TextView>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="fill_parent" android:id="@+id/relativeLayoutZoom" android:layout_marginBottom="52dp">
            <LinearLayout android:id="@+id/linearLayout1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_alignParentBottom="true">
                <ImageButton android:background="#00000000" android:layout_marginBottom="16dp" android:scaleType="fitXY" android:id="@+id/btnWeiboShow" android:src="@drawable/weibo48x48" android:layout_height="42dp" android:layout_width="42dp" android:layout_marginLeft="2dp"></ImageButton>
                <ImageButton android:background="#00000000" android:id="@+id/btnShare" android:scaleType="fitXY" android:layout_marginBottom="16dp" android:layout_width="44dp" android:layout_height="44dp" android:src="@drawable/share"></ImageButton>
                <ImageButton android:id="@+id/btnZoomin" android:background="#00000000" android:src="@drawable/zoomin" android:layout_width="42dp" android:scaleType="fitXY" android:layout_marginBottom="5dp" android:layout_height="42dp"></ImageButton>
                <ImageButton android:id="@+id/btnZoomout" android:background="#00000000" android:src="@drawable/zoomout" android:layout_width="42dp" android:scaleType="fitXY" android:layout_marginBottom="5dp" android:layout_height="42dp"></ImageButton>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout android:layout_width="fill_parent" android:id="@+id/linearLayoutBottom" android:orientation="vertical" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/relativeLayout2">
                <LinearLayout android:layout_width="wrap_content" android:id="@+id/linearLayout2" android:layout_alignParentLeft="true" android:orientation="vertical" android:layout_height="wrap_content">
                    <ImageButton android:layout_marginLeft="2dp" android:id="@+id/imageButton4" android:layout_marginBottom="2dp" android:background="#00000000" android:src="@drawable/upup" android:layout_marginTop="3dp" android:scaleType="fitXY" android:layout_height="50dp" android:layout_width="50dp"></ImageButton>
                </LinearLayout>
                <LinearLayout android:layout_width="fill_parent" android:id="@+id/llVoteInfo" android:orientation="vertical" android:layout_height="wrap_content">
                    <ProgressBar android:max="100" android:layout_width="fill_parent" style="?android:attr/progressBarStyleHorizontal" android:paddingTop="2dp" android:layout_height="9dp" android:progressDrawable="@drawable/voterating_progress_horizontal" android:layout_marginBottom="2dp" android:layout_marginTop="14dp" android:secondaryProgress="0" android:progress="0" android:paddingBottom="2dp" android:id="@+id/pbVote" android:layout_marginLeft="54dp" android:layout_marginRight="54dp"></ProgressBar>
                    <RelativeLayout android:background="#36000000" android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/rlVoteText" android:layout_marginLeft="54dp" android:layout_marginRight="54dp">
                        <TextView android:layout_marginLeft="2dp" android:layout_width="wrap_content" android:id="@+id/tvUpup" android:layout_height="wrap_content" android:text="0" android:textColor="#ffb600"></TextView>
                        <TextView android:layout_centerHorizontal="true" android:layout_width="wrap_content" android:id="@+id/tvVoteRating" android:layout_height="wrap_content" android:text="0%" android:textColor="#b38006" android:gravity="center"></TextView>
                        <TextView android:layout_width="wrap_content" android:layout_marginRight="2dp" android:layout_alignParentRight="true" android:id="@+id/tvDwdw" android:layout_height="wrap_content" android:text="0" android:textColor="#4914f4"></TextView>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content" android:layout_alignParentRight="true" android:id="@+id/linearLayout3" android:orientation="vertical" android:layout_height="wrap_content">
                    <ImageButton android:id="@+id/imageButton3" android:layout_marginBottom="2dp" android:background="#00000000" android:src="@drawable/dwdw" android:layout_marginTop="3dp" android:scaleType="fitXY" android:layout_marginRight="2dp" android:layout_width="50dp" android:layout_height="50dp"></ImageButton>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
